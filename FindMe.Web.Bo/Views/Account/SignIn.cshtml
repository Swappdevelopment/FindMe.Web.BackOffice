
@{
    ViewBag.Title = "Sign In";
}


@section css {
    <link rel="stylesheet" href="~/css/signin.css" />
}

@section scripts {

    <script src="~/js/app-signin.js"></script>
    <script src="~/js/app-signin-ctrlr.js"></script>

}

<div id="signin" ng-app="app-signin">
    <h2 class="findme-color-fc-pink">Sign In</h2>

    <div ng-controller="app-signin-ctrlr as vm">

        <form novalidate name="signinform" ng-submit="vm.signin()">

            <div class="row">

                <div class="col-md-6">

                    <div class="form-group">
                        <label class="findme-color-fc-dark" for="username">Email/User name</label>
                        <input type="text" class="form-control" id="userName" name="userName" ng-model="vm.obj.userName" required ng-minlength="4" />
                        <span class="text-warning show-on-load" ng-show="signinform.userName.$error.required">A valid Email or User name is required</span>
                        <span class="text-warning show-on-load" ng-show="signinform.userName.$error.minlength">A valid Email or User name is required</span>
                    </div>

                    <div class="form-group">
                        <label class="findme-color-fc-dark" for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" ng-model="vm.obj.password" required />
                        <span class="text-warning show-on-load" ng-show="signinform.password.$error.required">A password is required</span>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="findme-color-fc-dark col-md-5" for="remember"><input type="checkbox" id="remember" name="remember" ng-model="vm.obj.remember" /> Remember Me?</label>

                            <a class="col-md-7" asp-controller="Account" asp-action="ForgotPassword">Forgot your Password?</a>
                        </div>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-signin"><span class="fa fa-chevron-right fa-3x findme-color-fc-pink"></span></button>
                    </div>
                </div>

                <div class="col-md-6">
                    <h3 class="findme-color-fc-pink">Don't have an Account?</h3>

                    <a asp-controller="Account" asp-action="SingUp" class="btn btn-findme btn-lg">Sign Up!</a>
                </div>

            </div>

        </form>

    </div>

</div>